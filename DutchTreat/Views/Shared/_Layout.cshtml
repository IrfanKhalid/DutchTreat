<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />


</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fa fa-handshake"></i>Welcome to the Dutch Treat</h1>
            <button class="navbar-toggler">
                <span class="navbar-toggler-icon" data-toggle="collapse" data-target="#navmenu"></span>
            </button>
            <div id="navmenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item"><a asp-controller="App" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-controller="App" asp-action="Contact" class="nav-link">Contact</a></li>
                    <li class="nav-item"><a asp-controller="App" asp-action="Shop" class="nav-link">Shop</a></li>
                    <li class="nav-item"><a asp-controller="App" asp-action="About" class="nav-link">About</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Login</a></li>

                    }

                </ul>
            </div>
        </nav>
    </header>


    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>

    <footer class="container text-center"><div>Copyright 2017 DutchTreat LCC </div></footer>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("Scripts")
</body>

</html>

